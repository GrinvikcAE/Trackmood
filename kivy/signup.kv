MDScreen:
    name: 'signup'
    MDFloatLayout:
        md_bg_color: 218/255, 221/255, 216/255, 1
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_y': .95}
            user_font_size: '30sp'
            theme_text_color: 'Custom'
            text_color: rgba(91, 119, 127, 255)
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'main'
        MDLabel:
            text: 'S I G N   U P'
            font_name: 'Bras Mono'
            font_size: '26sp'
            pos_hint: {'center_x': 0.5,'center_y': 0.75}
            halign: 'center'
            color: rgba(91, 119, 127, 255)
        MDLabel:
            text: 'Create a new account'
            font_name: 'Bras Mono'
            font_size: '18sp'
            pos_hint: {'center_x': 0.5,'center_y': 0.7}
            halign: 'center'
            color: rgba(91, 119, 127, 130)
        MDFloatLayout:
            size_hint: 0.7, 0.09
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            TextInput:
                halign: 'center'
                hint_text: 'Username'
                font_name: 'Bras Mono'
                size_hint_y: 1.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.95}
                background_color: 218/255, 221/255, 216/255, 0
                foreground_color: rgba(91, 119, 127, 255)
                cursor_color: rgba(91, 119, 127, 255)
                font_size: '18sp'
                cursor_width: '2sp'
                multiline: False
            MDFloatLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                size_hint_y: 0.03
                md_bg_color: rgba(91, 119, 127, 255)
        MDFloatLayout:
            size_hint: 0.7, 0.09
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            TextInput:
                halign: 'center'
                hint_text: 'Email'
                font_name: 'Bras Mono'
                size_hint_y: 0.75
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                background_color: 218/255, 221/255, 216/255, 0
                foreground_color: rgba(91, 119, 127, 255)
                cursor_color: rgba(91, 119, 127, 255)
                font_size: '18sp'
                cursor_width: '2sp'
                multiline: False
            MDFloatLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                size_hint_y: 0.03
                md_bg_color: rgba(91, 119, 127, 255)
        MDFloatLayout:
            size_hint: 0.7, 0.09
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
            TextInput:
                halign: 'center'
                hint_text: 'Password'
                font_name: 'Bras Mono'
                size_hint_y: 0.75
                pos_hint: {'center_x': 0.5, 'center_y': 0.33}
                background_color: 218/255, 221/255, 216/255, 0
                foreground_color: rgba(91, 119, 127, 255)
                cursor_color: rgba(91, 119, 127, 255)
                font_size: '18sp'
                cursor_width: '2sp'
                multiline: False
                password: True
        MDFillRoundFlatButton:
            text: 'SIGN UP'
            size_hint: 0.66, 0.09
            md_bg_color: (91/255, 119/255, 127/255, 255/255)
            pos_hint: {'center_x': 0.515, 'center_y': 0.3}
            background_color: 0, 0, 0, 0
            font_name: 'Bras Mono'
            font_size: '23sp'
            canvas.before:
                Color:
                    rgb: rgba(218, 221, 216, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        MDTextButton:
            text: "Already have an account?"
            pos_hint: {'center_x': 0.515, 'center_y': 0.1}
            color: rgba(91, 119, 127, 130)
            font_name: 'Bras Mono'
            font_size: '18sp'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'login'